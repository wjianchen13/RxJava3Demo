<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_base"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基础使用"/>
    
    <Button
        android:id="@+id/bt_create"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建操作符"/>
    <Button
        android:id="@+id/bt_transform"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="变换操作符"/>
    <Button
        android:id="@+id/bt_filter"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="过滤操作符"/>

    <Button
        android:id="@+id/bt_combine"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组合操作符"/>

    <Button
        android:id="@+id/bt_utility"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="辅助操作符"/>
    <Button
        android:id="@+id/bt_error"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="错误操作符"/>

    <Button
        android:id="@+id/bt_conditional"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="条件和布尔操作符"/>
    <Button
        android:id="@+id/bt_conversion"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转换操作符"/>
    <Button
        android:id="@+id/bt_okhttp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结合Okhttp"/>
    <Button
        android:id="@+id/bt_retrofit"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结合Retrofit"/>
    <Button
        android:id="@+id/bt_rxbus"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rxbus"/>
</LinearLayout>
