<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conversion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rxjava3demo.TransformActivity">

    <Button
        android:id="@+id/bt_base"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="map"
        android:textAllCaps="false"
        android:onClick="map"/>

    <Button
        android:id="@+id/bt_create"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="flatMap"
        android:textAllCaps="false"
        android:onClick="flatMap"/>
    <Button
        android:id="@+id/bt_transform"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="concatMap"
        android:textAllCaps="false"
        android:onClick="concatMap"/>
    <Button
        android:id="@+id/bt_filter"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="flatMapIterable"
        android:textAllCaps="false"
        android:onClick="flatMapIterable"/>

    <Button
        android:id="@+id/bt_combine"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buffer"
        android:textAllCaps="false"
        android:onClick="buffer"/>

    <Button
        android:id="@+id/bt_group_by"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="groupBy"
        android:textAllCaps="false"
        android:onClick="groupBy"/>

</LinearLayout>
